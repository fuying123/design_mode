<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout 
android:layout_gravity="center" 
android:orientation="vertical" 
android:id="@+id/test_motionsenor" 
android:layout_width="fill_parent"  
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="24.0dip" 
    android:id="@+id/ms_tv_x" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_alignParentLeft="true" />

    <TextView android:textSize="24.0dip" 
    android:id="@+id/ms_tv_y" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_below="@id/ms_tv_x" 
    android:layout_alignParentLeft="true" />

    <TextView android:textSize="24.0dip" 
    android:id="@+id/ms_tv_z" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_below="@id/ms_tv_y" 
    android:layout_alignParentLeft="true" />

    <ImageView android:id="@+id/ms_arrow_down" 
    android:visibility="invisible" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:src="@drawable/ms_draw_down" 
    android:layout_below="@id/ms_tv_z" 
    android:layout_centerInParent="true" />
    <ImageView android:id="@+id/ms_arrow_up" 
    android:visibility="invisible" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:src="@drawable/ms_draw_up" 
    android:layout_below="@id/ms_tv_z" 
    android:layout_centerInParent="true" />
    <ImageView android:id="@+id/ms_arrow_left" 
    android:visibility="invisible" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:src="@drawable/ms_draw_left" 
    android:layout_below="@id/ms_tv_z" 
    android:layout_centerInParent="true" />
    <ImageView android:id="@+id/ms_arrow_right" 
    android:visibility="invisible" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:src="@drawable/ms_draw_right" 
    android:layout_below="@id/ms_tv_z" 
    android:layout_centerInParent="true" />
    <Button android:id="@+id/calibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14.0dip"
        android:layout_below="@id/ms_arrow_down"
        android:text="@string/calibration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
    />
</RelativeLayout>
